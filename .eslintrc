{
    "parser": "babel-eslint",
    "extends": "airbnb",
    "env": {
        "es6": true,
        "browser": true,
        "node": true
    },
    "rules": {
        "react/jsx-filename-extension": 0,
        "no-use-before-define": [
            "error",
            {
                "functions": false
            }
        ],
        "arrow-parens": [
            "error",
            "as-needed"
        ],
        "semi": [
            "error",
            "never"
        ]
    }
}